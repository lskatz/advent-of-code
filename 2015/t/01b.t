sub whenIsBasement{
  my($data) = @_;
  my @steps;

  for my $line(split(/\n/, $data)){
    next if($line =~ /^\s*$/);
    chomp($line);

    my $floor = 0;
    my $pos   = 0;
    while($line =~ /([\(\)])/g){
      $pos++;
      if($1 eq '('){
        $floor++;
      }
      elsif($1 eq ')'){
        $floor--;
        if($floor == -1){
          push(@steps, $pos);
          last;
        }
      }
    }
  }

  return \@steps;
}

