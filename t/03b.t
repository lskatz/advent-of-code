#!/usr/bin/env perl
use strict;
use warnings;
use List::Util qw/min/;
use Test::More tests=>2;

my @slope = (
  [1,1],
  [3,1],
  [5,1],
  [7,1],
  [1,2],
);

my @testdata = ( 
  '..##.......',
  '#...#...#..',
  '.#....#..#.',
  '..#.#...#.#',
  '.#...##..#.',
  '..#.##.....',
  '.#.#.#....#',
  '.#........#',
  '#.##...#...',
  '#...##....#',
  '.#..#...#.#',
);

subtest 'sample set' => sub{
  my @expected = (2,7,3,4,2);

  plan tests=>scalar(@expected) + 1;

  my $product=1;
  for(my $i=0;$i<@expected;$i++){
    my $obsTrees = countTrees(\@testdata, $slope[$i]);
    is($obsTrees, $expected[$i]);
    $product *= $obsTrees;
  }

  is($product, 336, "product of the number of trees: $product");
};

subtest 'real set' => sub{
  my @expected = (70,220,63,76,29);

  plan tests=>scalar(@expected) + 1;

  my @data = grep {/./} <DATA>;
  chomp(@data);

  my $product = 1;
  for(my $i=0;$i<@expected;$i++){
    my $obsTrees = countTrees(\@data, $slope[$i]);
    is($obsTrees, $expected[$i]);

    $product *= $obsTrees;
  }

  is($product, 2138320800, "product of the number of trees: $product");
};

sub countTrees{
  my($data, $slope) = @_;

  my $posX = 0; # row
  my $posY = 0; # col
  my $numTrees = 0;

  my $numRows = @$data;
  while($posX < $numRows){
    my $treeRow = $$data[$posX];
    my $windowLength = length($treeRow);
    my $char = substr($treeRow, $posY % $windowLength, 1);
    if($char eq '#'){
      $numTrees++;
    }
    # advance
    $posX+=$$slope[1];
    $posY+=$$slope[0];
  }
  
  return $numTrees;
}

sub isTree{
  my($treeRow, $posY) = @_;

  my @baseRow;
  for(split(//, $treeRow)){
    if($_ eq '.'){
      push(@baseRow, 0);
    }
    elsif($_ eq '#'){
      push(@baseRow, 1);
    }
    else{
      die "Could not understand character $_";
    }
  }

  # create the actual array of trees and pad it as
  # much as needed
  my @expandedRow = @baseRow;
  while(scalar(@expandedRow) < $posY){
    push(@expandedRow, @baseRow);

    # Just in case it gets to be too big
    die "Expanded row too big" if(scalar(@expandedRow) > 999999);
  }

  return $expandedRow[$posY];

}

