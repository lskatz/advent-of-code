use strict;
use warnings;
use Data::Dumper;
use Test::More tests=>2;

subtest "Test $0" => sub{
  my $data = "
O....#....
O.OO#....#
.....##...
OO.#O....O
.O.....O#.
O.#..O.#.#
..O..#O..O
.......O..
#....###..
#OO..#....

  ";
  my $score = rollRocksUp($data);
  is($score, 136, "practice score");
};

subtest "Real $0" => sub{
  local $/ = undef;
  my $data = <DATA>;
  $data =~ s/^\s+|\s+$//g; # whitespace trim on each line
  my $score = rollRocksUp($data);
  is($score, 106997);
};

sub rollRocksUp{
  my($data) = @_;
  my @data;
  for my $line(split(/\n/, $data)){
    next if($line=~/^\s*$/);
    $line =~ s/^\s+|\s+$//g;

    push(@data, [split(//, $line)]);
  }

  # roll the rocks up
  my $numRows = @data;
  my $numCols = @{$data[0]};
  for(my $i=1;$i<$numRows;$i++){
    for(my $j=0;$j<$numCols;$j++){
      if($data[$i][$j] eq 'O'){
        rollOneRock($i,$j,\@data);
        #note printPlot(\@data);
        #note " ";
      }
    }
  }
  #note printPlot(\@data);

  # Calculate score
  my $score = 0;
  for(my $i=0;$i<$numRows;$i++){
    for(my $j=0;$j<$numCols;$j++){
      if($data[$i][$j] eq 'O'){
        $score += ($numRows-$i);
      }
    }
  }
  return $score;
}

sub rollOneRock{
  my($origORow,$origOCol,$data) = @_;

  if($$data[$origORow][$origOCol] !~ /O/i){
    return;
  }
  
  my $goToRow;
  for(my $i=$origORow-1;$i>=0;$i--){
    if($$data[$i][$origOCol] =~ /#|O/i){
      $goToRow = $i+1;
      last;
    }
    if($i==0 && $$data[$i][$origOCol] eq '.'){
      $goToRow = $i;
      last;
    }
  }
  
  if(defined($goToRow)){
    #note "$origORow,$origOCol => $goToRow,$origOCol";
    $$data[$origORow][$origOCol] = '.';
    $$data[$goToRow][$origOCol] = 'O';
  }

}

sub printPlot{
  my($data) = @_;
  my $str;
  for(my $i=0;$i<@$data;$i++){
    $str .= join("", @{$$data[$i]});
    $str .= "\n";
  }
  return $str;
}
